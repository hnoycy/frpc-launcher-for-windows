<Window x:Class="frpc客户端.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frpc客户端" xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Title="MainWindow" Height="450" Width="800"
        Icon="pack://application:,,,/Resources/img/frpc.ico">
    <!-- 窗口内容 -->
    <Window.Resources>
        <tb:TaskbarIcon x:Key="NotifyIcon" IconSource="pack://application:,,,/Resources/img/frpc.ico" ToolTipText="Frpc" Visibility="Visible" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="70*" />
        </Grid.RowDefinitions>

        <TextBox x:Name="outputTextBox" Grid.Row="1" VerticalScrollBarVisibility="Auto" IsReadOnly="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Button x:Name="RunButton" Content="运行"  Grid.Row="0" Click="RunButton_Click" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
